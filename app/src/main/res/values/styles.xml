<resources>

    <style name="Theme.Smartwar" parent="Theme.Sherlock.Light.DarkActionBar">
    </style>


    <style name="reviewRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/review_ratingbar_full</item>
        <item name="android:minHeight">44dip</item>
        <item name="android:maxHeight">44dip</item>
    </style>

    <style name="line_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_separator</item>
    </style>

    <style name="edittext">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/semi_light_gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="green_large_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/button_green_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="text_title_prompts">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="filter_sub_text_label_style">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
